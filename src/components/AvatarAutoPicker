"use client";

import React from "react";
import styles from "./avatarpicker.module.css";

const baseUrl = "https://i.pravatar.cc/150?img=";

const AvatarAutoPicker = ({ walletAddress, size = 64 }) => {
  if (!walletAddress) return null;

  const index = parseInt(walletAddress.slice(-2), 16) % 20 + 1; // 1â€“20
  const avatarSrc = `${baseUrl}${index}`;

  return (
    <img
      src={avatarSrc}
      alt="User Avatar"
      width={size}
      height={size}
      className={styles.avatar}
    />
  );
};

export default AvatarAutoPicker;
